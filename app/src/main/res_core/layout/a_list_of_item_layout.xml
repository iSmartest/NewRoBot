<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250px"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q5L"
            android:textSize="24px"
            android:id="@+id/a_list_item_Name"
            android:textColor="@color/vipTextColor"
            android:layout_marginLeft="30px"/>

        <com.idlestar.ratingstar.RatingStarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTransParent"
            android:padding="10px"
            app:drawStrokeForEmptyStar="false"
            app:drawStrokeForHalfStar="true"
            app:enableSelectRating="true"
            app:rating="5"
            app:starBackgroundColor="#E8E8E8"
            app:starForegroundColor="#DB6958"
            app:starMargin="1px"
            app:starNum="5"
            android:id="@+id/a_list_item_RatingStarView"
            app:starThickness="0.7"
            app:strokeColor="#457DD7"
            app:strokeWidth="1px" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="98px"
    android:id="@+id/a_List_item_Img"
    android:layout_below="@id/a_list_item_Name"
    android:src="@mipmap/audi_icon_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="级    别："
            android:layout_marginLeft="30px"
            android:textSize="18px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_List_item_Img"
            android:id="@+id/a_list_item_1"
            android:textColor="@color/vipTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车身结构："
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_list_item_1"
            android:id="@+id/a_list_item_2"
            android:textColor="@color/vipTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机："
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_list_item_2"
            android:id="@+id/a_list_item_3"
            android:textColor="@color/vipTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变速箱："
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_list_item_3"
            android:id="@+id/a_list_item_4"
            android:textColor="@color/vipTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预售价："
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_list_item_4"
            android:id="@+id/a_list_item_5"
            android:textColor="@color/vipTextColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18px"
            android:textColor="@color/red"
            android:text="暂无报价"
            android:id="@+id/a_list_item_7"
            android:layout_toRightOf="@id/a_list_item_5"
            android:layout_below="@id/a_list_item_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外观指导价："
            android:textSize="18px"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="8px"
            android:layout_below="@id/a_list_item_5"
            android:id="@+id/a_list_item_6"
            android:textColor="@color/vipTextColor"/>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>