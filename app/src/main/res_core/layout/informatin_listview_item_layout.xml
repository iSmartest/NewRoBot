<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/infrom_item_img"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="12px"
            android:layout_marginLeft="32px"
            android:layout_marginBottom="16px"
            android:layout_marginRight="20px"
            android:src="@mipmap/icon_name"/>

            <TextView
                android:layout_marginTop="22px"
                android:layout_width="wrap_content"
                android:id="@+id/infrom_item_Name"
                android:layout_height="wrap_content"
                android:text="張"
                android:layout_toRightOf="@id/infrom_item_img"
                android:textSize="24px"
                android:textColor="@color/homeTextColor"/>
            <TextView
                android:id="@+id/infrom_item_Time"
                android:layout_toRightOf="@id/infrom_item_img"
                android:layout_below="@id/infrom_item_Name"
                android:layout_width="wrap_content"
                android:layout_marginTop="16px"
                android:layout_height="wrap_content"
                android:text="2018.12.12"
                android:textSize="24px"
                android:textColor="@color/homeTextColor"/>
            <TextView
                android:id="@+id/infrom_item_Context"
                android:layout_toRightOf="@id/infrom_item_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infrom_item_Name"
                android:layout_marginLeft="15px"
                android:layout_marginTop="16px"
                android:text="張張張張張張張張張張張張張張"
                android:textSize="24px"
                android:textColor="@color/homeTextColor"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>