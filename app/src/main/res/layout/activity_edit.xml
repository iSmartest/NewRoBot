<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.furuiintelligence.newrobot.ui.activity.home.intformtion.EditActivity">

<com.zhy.autolayout.AutoRelativeLayout

    android:layout_width="match_parent"
    android:background="@mipmap/edit_bg_title"
    android:layout_height="402px">
    <include
        layout="@layout/titlebar_layout"/>

    <ImageView
        android:layout_width="98px"
        android:layout_height="98px"
        android:id="@+id/editPic"
        android:layout_marginTop="195px"
        android:layout_marginLeft="74px"
        android:src="@mipmap/icon_vip_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36px"
        android:id="@+id/edit_Name"
        android:layout_marginTop="200px"
        android:layout_toRightOf="@id/editPic"
        android:layout_marginLeft="22px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/edit_Name"
        android:layout_toRightOf="@id/editPic"
        android:layout_marginLeft="22px"
        android:layout_marginTop="14px"
        android:id="@+id/edit_Time"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资料完整度0%"
        android:textSize="20px"
        android:padding="10px"

        android:layout_below="@id/edit_Time"
        android:layout_toRightOf="@id/editPic"
        android:layout_marginLeft="22px"
        android:layout_marginTop="14px"
        android:id="@+id/edit_Perfac"
        android:layout_marginRight="12px"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:textSize="20px"
        android:paddingRight="30px"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:id="@+id/edit_Get"
        android:layout_toRightOf="@id/edit_Perfac"
        android:layout_below="@id/edit_Time"
        android:layout_marginTop="14px"
        android:layout_marginLeft="12px"
        android:textColor="@color/getText"
        android:text="提取资料"
        />



</com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="姓名："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:id="@+id/editNames"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:focusable="false"
                    android:gravity="bottom"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="年龄："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:id="@+id/editAge"
                    android:text=""
                    android:focusable="false"
                    android:gravity="bottom"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="性别："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:id="@+id/editSex"
                    android:gravity="bottom"
                    android:focusable="false"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="工作："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:id="@+id/editWork"
                    android:gravity="bottom"
                    android:focusable="false"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="地址："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:id="@+id/editAddses"
                    android:focusable="false"
                    android:gravity="bottom"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="身份证："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:id="@+id/edit_IdCred"
                    android:focusable="false"
                    android:text=""
                    android:gravity="bottom"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/vipTextColor"
                    android:text="手机号："
                    android:textSize="30px"
                    android:gravity="bottom"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text=""
                    android:gravity="bottom"
                    android:id="@+id/editPhone"
                    android:focusable="false"
                    android:textSize="30px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
           <com.zhy.autolayout.AutoLinearLayout
               android:layout_width="match_parent"
               android:layout_height="78px">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textColor="@color/vipTextColor"
                   android:text="购车意向："
                   android:paddingLeft="32px"
                   android:textSize="30px"
                   android:gravity="bottom"/>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/vipTextColor"
                   android:textSize="34px"
                   android:padding="20px"
                   android:focusable="false"
                   android:id="@+id/edit_Content"
                   android:background="@null"
                   android:gravity="left"
                   android:text=""/>
           </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                android:layout_marginRight="30px"
                android:layout_marginLeft="30px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
