<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="322px"
        android:background="#ff000203"

        android:layout_width="match_parent"
        android:layout_height="468px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="小奥呼叫"
            android:textSize="36px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/call_in"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="98px"
            android:layout_marginLeft="90px"
            android:layout_marginStart="64px"

            android:text="接待"
            android:textColor="#03F040"
            android:textSize="48px"
            android:id="@+id/dialog_Jd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dialog_Jd"
            android:layout_alignBottom="@+id/dialog_Jd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="92px"
            android:layout_marginRight="92px"
            android:text="工作"
            android:id="@+id/dialog_Gz"
            android:textColor="@color/red"
            android:textSize="48px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>